extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Food, Jewelry etc.' name='name' value=(undefined===item ? '' : item.name))
      label(for='name') Description:
      input#name.form-control(type='text', name='description' value=(undefined===item ? '' : item.description))
      label(for='name') Price:
      input#name.form-control(type='text', name='price' value=(undefined===item ? '' : item.price))
      label(for='name') Amount in Stock:
      input#name.form-control(type='text', name='numstock' value=(undefined===item ? '' : item.numstock))
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
            label(for=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg